<?xml version="1.0" encoding="UTF-8"?>  
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                           xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">  
  <persistence-unit name="primary" transaction-type="JTA">
   <jta-data-source/>
      <properties>
      <property name="hibernate.ogm.datastore.provider" value="mongodb"/>
      <property name="hibernate.ogm.mongodb.host" value="database"/>
      <property name="hibernate.ogm.mongodb.database" value="${MONGODB_DATABASE}"/>
      <property name="hibernate.ogm.mongodb.username" value="${MONGODB_USER}"/>
      <property name="hibernate.ogm.mongodb.password" value="${MONGODB_PASSWORD}"/>
    </properties>
  </persistence-unit>
</persistence>  


